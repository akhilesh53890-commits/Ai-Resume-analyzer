    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // ELEMENTS
            const dropZone = document.getElementById('dropZone');
            const fileInput = document.getElementById('fileInput');
            const analyzeBtn = document.getElementById('analyzeBtn');
            const uploadWrapper = document.getElementById('uploadWrapper');
            const mainHeader = document.getElementById('mainHeader');
            
            // SCREENS
            const uploadModal = document.getElementById('uploadModal');
            const redirectScreen = document.getElementById('redirectScreen');
            const processingScreen = document.getElementById('processingScreen');
            const dashboard = document.getElementById('dashboard');
            const thankYouSection = document.getElementById('thankYouSection');
            
            // VIEWS
            const viewOriginal = document.getElementById('viewOriginal').querySelector('pre');
            const viewEnhanced = document.getElementById('viewEnhanced');
            const toggleSwitch = document.getElementById('toggleSwitch');

            // STATE
            let currentFile = null;
            let extractedText = '';
            let geminiAnalysisResult = '';
            
            // API KEY
            const API_KEY = 'AIzaSyB-hZrgxseYLqtLnjnkBAPkrFEtExYs0ew';

            // --- UPLOAD & FILE LOGIC ---
            dropZone.addEventListener('click', () => fileInput.click());
            
            dropZone.addEventListener('dragover', (e) => { 
                e.preventDefault(); 
                dropZone.classList.add('scanning'); 
                dropZone.style.borderColor = "var(--cyan)"; 
            });
            
            dropZone.addEventListener('dragleave', (e) => { 
                e.preventDefault(); 
                dropZone.classList.remove('scanning'); 
                dropZone.style.borderColor = "var(--glass-border)"; 
            });
            
            dropZone.addEventListener('drop', (e) => { 
                e.preventDefault(); 
                dropZone.classList.remove('scanning'); 
                if(e.dataTransfer.files.length) handleFile(e.dataTransfer.files[0]); 
            });
            
            fileInput.addEventListener('change', (e) => { 
                if(e.target.files.length) handleFile(e.target.files[0]); 
            });

            function handleFile(file) {
                if (file.type !== 'application/pdf') {
                    alert('System requires a PDF file protocol.');
                    return;
                }
                currentFile = file;
                // Update UI to show file selected
                dropZone.innerHTML = `<div class="icon" style="color:var(--cyan)">ðŸ“„</div><h3 style="color:#fff">${file.name}</h3><p style="color:var(--cyan)">DATA PACKET SECURED</p>`;
                dropZone.style.borderColor = "var(--cyan)";
                analyzeBtn.style.display = "block";
            }

            // --- MAIN FLOW: TRIGGER ANALYSIS ---
            analyzeBtn.addEventListener('click', async () => {
                if (!currentFile) return;

                // 1. Show Upload Progress (Visual Only)
                uploadModal.style.display = "flex";
                
                // Start the logic in background (Extract Text)
                try {
                    extractedText = await extractTextFromPDF(currentFile);
                    viewOriginal.textContent = extractedText; // Set original view
                } catch (error) {
                    console.error("PDF Error", error);
                    alert("Extraction failed. Aborting.");
                    location.reload();
                    return;
                }

                // Animate Progress Bar
                let width = 0;
                const bar = document.getElementById('progressBar');
                const txt = document.getElementById('uploadPercent');

                const interval = setInterval(() => {
                    width += Math.random() * 15; 
                    if(width >= 100) {
                        width = 100;
                        clearInterval(interval);
                        setTimeout(triggerRedirect, 400); // Done, move to next
                    }
                    bar.style.width = width + "%";
                    txt.innerText = Math.floor(width) + "%";
                }, 100);
            });

            function triggerRedirect() {
                uploadModal.style.display = "none";
                uploadWrapper.style.display = "none";
                mainHeader.style.opacity = "0"; // Fade out header for immersion
                
                redirectScreen.style.display = "flex";
                
                // Start API Call in background
                performGeminiAnalysis();
                
                setTimeout(triggerProcessing, 1500); // Wait 1.5s for effect
            }

            function triggerProcessing() {
                redirectScreen.style.display = "none";
                processingScreen.style.display = "grid";
                
                // Checklist Animation Loop
                const items = ['chk1', 'chk2', 'chk3', 'chk4'];
                let index = 0;

                function nextItem() {
                    if(index < items.length) {
                        const el = document.getElementById(items[index]);
                        el.classList.add('visible', 'active');
                        
                        // Duration of each check item
                        setTimeout(() => {
                            el.classList.remove('active');
                            el.classList.add('done');
                            index++;
                            nextItem();
                        }, 1200); 
                    } else {
                        // All checks done. Check if API is ready.
                        checkIfAnalysisReady();
                    }
                }
                nextItem();
            }

            async function checkIfAnalysisReady() {
                // Simple polling to wait for Gemini result if animation finished before API
                if (!geminiAnalysisResult) {
                    const loadingMsg = document.createElement('div');
                    loadingMsg.innerHTML = '<p style="color:var(--cyan); text-align:center; font-family:Orbitron;">AWAITING NEURAL LINK RESPONSE...</p>';
                    document.querySelector('.checklist-container').appendChild(loadingMsg);
                    
                    while (!geminiAnalysisResult) {
                        await new Promise(r => setTimeout(r, 500));
                    }
                    loadingMsg.remove();
                }
                showDashboard();
            }

            // --- DASHBOARD DISPLAY ---
            function showDashboard() {
                processingScreen.style.display = "none";
                mainHeader.style.opacity = "1";
                dashboard.style.display = "block";

                // Render Gemini Result
                viewEnhanced.innerHTML = marked.parse(geminiAnalysisResult);

                // Auto-switch to Analysis view
                setTimeout(() => { 
                    if(!toggleSwitch.classList.contains('active')) {
                        toggleSwitch.click(); 
                    }
                }, 1000);

                // Animate Score (Randomized between 85-98 for effect)
                const randomScore = Math.floor(Math.random() * (98 - 85 + 1) + 85);
                const gauge = document.getElementById('atsGauge');
                const offset = 565 - (565 * (randomScore / 100));
                
                setTimeout(() => { gauge.style.strokeDashoffset = offset; }, 500);
                
                let count = 0;
                const counter = setInterval(() => {
                    document.getElementById('scoreVal').innerText = count;
                    if(count >= randomScore) clearInterval(counter);
                    count++;
                }, 20);
            }

            // --- LOGIC: PDF & API ---
            async function extractTextFromPDF(file) {
                const arrayBuffer = await file.arrayBuffer();
                const pdf = await pdfjsLib.getDocument({ data: arrayBuffer }).promise;
                let fullText = '';
                for (let i = 1; i <= pdf.numPages; i++) {
                    const page = await pdf.getPage(i);
                    const textContent = await page.getTextContent();
                    const pageText = textContent.items.map(item => item.str).join(' ');
                    fullText += pageText + '\n';
                }
                return fullText;
            }

            async function performGeminiAnalysis() {
                const prompt = `
                    You are an advanced AI career architect. Analyze the resume below.
                    
                    Resume:
                    ${extractedText}

                    Output purely in Markdown.
                    Structure:
                    1. **Executive Profile** (Professional summary)
                    2. **Key Strengths** (Bullet points)
                    3. **Critical Gaps** (What is missing?)
                    4. **Optimization Strategy** (Actionable advice)
                    5. **Recommended Roles**
                `;

                try {
                    geminiAnalysisResult = await callGeminiAPI(API_KEY, prompt);
                } catch (error) {
                    console.error(error);
                    geminiAnalysisResult = "### SYSTEM ERROR\nNeural link severed. Please try again.";
                }
            }

            async function callGeminiAPI(apiKey, prompt) {
                const modelsToTry = ['gemini-2.0-flash', 'gemini-1.5-flash', 'gemini-pro'];
                
                for (const model of modelsToTry) {
                    try {
                        const url = `https://generativelanguage.googleapis.com/v1beta/models/${model}:generateContent?key=${apiKey}`;
                        const response = await fetch(url, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ contents: [{ parts: [{ text: prompt }] }] })
                        });

                        if (!response.ok) throw new Error(response.statusText);
                        const data = await response.json();
                        return data.candidates[0].content.parts[0].text;
                    } catch (e) {
                        console.warn(`Model ${model} failed, switching node...`);
                    }
                }
                throw new Error('All models failed');
            }

            // --- UI INTERACTION LISTENERS ---
            
            // Toggle View
            toggleSwitch.addEventListener('click', () => {
                toggleSwitch.classList.toggle('active');
                if(toggleSwitch.classList.contains('active')) {
                    // Show Analysis
                    viewOriginal.parentElement.style.display = 'none';
                    viewEnhanced.style.display = 'block';
                } else {
                    // Show Original
                    viewOriginal.parentElement.style.display = 'block';
                    viewEnhanced.style.display = 'none';
                }
            });

            // Download Button
            document.getElementById('downloadBtn').addEventListener('click', () => {
                const blob = new Blob([geminiAnalysisResult], { type: "text/markdown" });
                const url = URL.createObjectURL(blob);
                const a = document.createElement("a");
                a.href = url; a.download = "NEXSUS_Report.md";
                document.body.appendChild(a); a.click(); document.body.removeChild(a);

                dashboard.style.display = 'none';
                thankYouSection.style.display = 'flex';
            });
        });
    </script>
</body>
</html>
```
